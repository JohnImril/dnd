{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext", "dom"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"include": ["src", "src/declarations.d.ts"]
}
